{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/helpers/localize/lang/**/*.json",
        "watchAssets": true,
        "outDir": "dist/apps/i18n"
      },
      { "include": "src/helpers/mail/templates/**/*.hbs", "watchAssets": true }
    ],
    "deleteOutDir": true
  }
}
