{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/lang/**/*.json",
        "watchAssets": true,
        "outDir": "dist/lang"
      },
      { "include": "src/helpers/mail/templates/**/*.hbs", "watchAssets": true }
    ],
    "deleteOutDir": true
  }
}
